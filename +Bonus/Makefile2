# ---------------------------------
# Variables
# ---------------------------------
NAME        = push_swap
BONUS_NAME  = checker

CC          = cc
CFLAGS      = -Wall -Wextra -Werror
RM          = rm -f

# ---------------------------------
# Directories & Libraries
# ---------------------------------
LIBFT_DIR   = libft
LIBFT_LIB   = $(LIBFT_DIR)/libft.a

INCLUDES    = -I. -I$(LIBFT_DIR)
LDFLAGS     = -L$(LIBFT_DIR) -lft

# ---------------------------------
# Source Files
# ---------------------------------

# Files used by BOTH programs (everything except main.c)
COMMON_SRCS =   oper_push.c             \
                oper_rev_rotation.c     \
                oper_rotation.c         \
                oper_swap.c             \
                parse_error.c           \
                sort_simple.c           \
                sort_utils.c            \
                sort.c                  \
                stack_utils.c           \
                stack_utils2.c          \
                utils.c

# Mandatory Source (Main program)
SRCS        = main.c $(COMMON_SRCS)

# Bonus Source (Checker program)
BONUS_SRCS  = checker.c $(COMMON_SRCS)
# ---------------------------------
# Object Files
# ---------------------------------
OBJS        = $(SRCS:.c=.o)
BONUS_OBJS  = $(BONUS_SRCS:.c=.o)

# ---------------------------------
# Rules
# ---------------------------------

all: $(NAME)

# Rule to compile the Mandatory program
$(NAME): $(LIBFT_LIB) $(OBJS)
	@$(CC) $(CFLAGS) $(INCLUDES) -o $(NAME) $(OBJS) $(LDFLAGS)
	@echo "push_swap compiled!"

# Rule to compile the Bonus program
bonus: $(LIBFT_LIB) $(BONUS_OBJS)
	@$(CC) $(CFLAGS) $(INCLUDES) -o $(BONUS_NAME) $(BONUS_OBJS) $(LDFLAGS)
	@echo "checker compiled!"

# Libft compilation
$(LIBFT_LIB):
	@$(MAKE) -C $(LIBFT_DIR)

# Generic object compilation
%.o: %.c push_swap.h
	@$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

clean:
	@$(RM) $(OBJS) $(BONUS_OBJS)
	@$(MAKE) -C $(LIBFT_DIR) clean
	@echo "Object files cleaned."

fclean: clean
	@$(RM) $(NAME) $(BONUS_NAME)
	@$(MAKE) -C $(LIBFT_DIR) fclean
	@echo "Executables cleaned."

re: fclean all

.PHONY: all clean fclean re bonus